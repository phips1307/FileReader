<Window x:Class="FileReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ReadButton" Content="read first" HorizontalAlignment="Left" Margin="57,15,0,0" VerticalAlignment="Top" Width="106" Click="ReadButton_Click"/>
        <TextBox x:Name="Path" HorizontalAlignment="Left" Height="23" Margin="178,27,0,0" TextWrapping="Wrap" Text="Path" VerticalAlignment="Top" Width="589"/>
        <TextBox x:Name="Output" HorizontalAlignment="Left" Height="321" Margin="57,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="710"/>
        <Button x:Name="Compare" Content="read and compare" HorizontalAlignment="Left" Margin="57,40,0,0" VerticalAlignment="Top" Width="106" Click="Compare_Click" />
        <TextBlock x:Name="first" HorizontalAlignment="Left" Margin="10,17,0,0" TextWrapping="WrapWithOverflow" Text="0" VerticalAlignment="Top" Width="42"/>
        <TextBlock x:Name="after" HorizontalAlignment="Left" Margin="10,40,0,0" TextWrapping="WrapWithOverflow" Text="0" VerticalAlignment="Top" Width="42"/>

    </Grid>
</Window>
